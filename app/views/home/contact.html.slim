= render('shared/error_block', form: @contact) if @contact.errors.any?
h2.heading-large
  span.heading-secondary = t('breadcrumb', scope: @contact.i18n_scope)
  = t('text', scope: @contact.i18n_scope)

= form_for @contact, url: contact_save_path do |f|
  fieldset
    legend.visuallyhidden = t('text', scope: @contact.i18n_scope)

    .form-group
      label.block-label data-target="email-field-panel"
        = f.check_box :email_option
        = t('email_option', scope: @contact.i18n_scope)
      #email-field-panel.panel-indent.util_mb-medium.js-hidden
        .form-group class=('error' if @contact.errors[:email].any?)
          = f.label :email, class: 'form-label'
          span.error-message#email = @contact.errors[:email].join(' ') if @contact.errors[:email].any?
          = f.text_field :email, class: 'form-control'

      label.block-label data-target="phone-number-panel"
        = f.check_box :phone_option
        = t('phone_option', scope: @contact.i18n_scope)
      #phone-number-panel.panel-indent.util_mb-medium.js-hidden
        .form-group class=('error' if @contact.errors[:phone].any?)
          = f.label :phone, class: 'form-label'
          span.error-message#phone = @contact.errors[:phone].join(' ') if @contact.errors[:phone].any?
          = f.text_field :phone, class: 'form-control'

      label.block-label
        = f.check_box :post_option
        = t('post_option', scope: @contact.i18n_scope)

    .form-group
      p = t('details', scope: @contact.i18n_scope)

    .form-group
      = f.submit t('submit_button'), class: 'button'
