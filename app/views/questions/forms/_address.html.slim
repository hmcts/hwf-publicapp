.govuk-form-group class=('govuk-form-group--error' if @form.errors[:street].any?)
  = f.label :street, t('activemodel.attributes.forms/applicant_address.street'), class: 'govuk-label'
  - if @form.errors[:street].any?
    span.govuk-error-message#street = @form.errors[:street].join(' ')
  = f.text_field :street, class: "govuk-input govuk-!-width-one-half street", autocomplete: "street-address", pattern: '[A-Za-z0-9 ]*', title: 'Only letters, numbers, and spaces are allowed'

