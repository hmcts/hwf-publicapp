.form-group class=('error' if @form.errors.any?)
  label.form-label for='dob_date_of_birth'
    span.visuallyhidden =t('text', scope: @form.i18n_scope)
    span.hint = t('hint_html', scope: @form.i18n_scope)
    - if @form.errors[:date_of_birth].any?
      span.error-message#date_of_birth = @form.errors[:date_of_birth].join(' ')
  / = f.text_field :date_of_birth, class: 'form-control'
  .form-date
    .form-group.form-group-day
      = f.label :day_date_of_birth, class: 'form-label'
      = f.text_field :day_date_of_birth, class: 'form-control', type:"number", pattern: "[0-9]*", min: "0", max: "31"
    .form-group.form-group-month
      = f.label :month_date_of_birth, class: 'form-label'
      = f.text_field :month_date_of_birth, class: 'form-control', type:"number", pattern: "[0-9]*", min: "0", max: "12"
    .form-group.form-group-year
      = f.label :year_date_of_birth, class: 'form-label'
      = f.text_field :year_date_of_birth, class: 'form-control', type:"number", pattern: "[0-9]*"

