.govuk-fieldset
  .govuk-form-group class=('govuk-form-group--error' if @form.errors.any?)
    = f.label :identifier, class: 'govuk-label'
    - if @form.errors[:identifier].any?
      span.govuk-error-message
        = f.label :identifier, @form.errors[:identifier].join(', '), class: 'error'

    = f.text_field :identifier, { class: 'govuk-input govuk-!-width-one-half', pattern: '[A-Za-z0-9 ]*', title: 'Only letters, numbers, and spaces are allowed' }


  .govuk-form-group
    .govuk-checkboxes
      .govuk-checkboxes__item
        = f.check_box :unknown, { class: 'govuk-checkboxes__input' }
        = f.label t('unknown', scope: @form.i18n_scope), class: 'govuk-label govuk-checkboxes__label', for: 'form_name_unknown'

  .govuk-form-group
    details.govuk-details data-module="govuk-details"
      summary.govuk-details__summary =t('details.summary', scope: @form.i18n_scope)

      .govuk-details__text
        p =t('details.item_1', scope: @form.i18n_scope)
